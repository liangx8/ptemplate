{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "AnotherBuild",
            "type": "shell",
            "command": "$HOME/usr/kotlinc/bin/kotlinc",
            "group": "none",
            "args": [
                "-d",
                "${workspaceFolder}/bin",
                "${file}"
            ],
            "options": {
                "env": {
                    "JAVACMD": "/home/arm/usr/java/bin/java",
                    "JAVA_HOME": "/home/arm/usr/java"
                },
                "cwd": "${workspaceFolder}/src"
            },
            "problemMatcher":[]
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "$HOME/usr/apache-ant-1.10.5/bin/ant",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": ["build"],
            "options": {
                "env": {
//                    "JAVACMD": "/home/arm/usr/java/bin/java",
                    "JAVA_HOME": "/home/arm/usr/java"
                },
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "AnthorRun",
            "type": "shell",
            "command": "$HOME/usr/java/bin/java",
            "group": "none",
            "args": [
                "MainKt"
            ],
            "options": {
                "cwd": "${workspaceFolder}/bin",
                "env": {
                    "JAVA_HOME": "/home/arm/usr/java"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "$HOME/usr/apache-ant-1.10.5/bin/ant",
            "group": "none",
            "args": ["run"],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "JAVA_HOME": "/home/arm/usr/java"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "$HOME/usr/apache-ant-1.10.5/bin/ant",
            "group": "none",
            "args": ["clean"],
            "options": {
                "env": {
                    "JAVA_HOME": "/home/arm/usr/java"
                },
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ]
}